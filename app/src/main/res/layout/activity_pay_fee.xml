<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayFeeActivity">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/pay_fee_mohter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/linerstroker">
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/insert_fee"
            android:clickable="true">


            <!-- Title, secondary and supporting text -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/dashboard_test"


                app:srcCompat="@drawable/ic_pay_bill" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center"

                android:text="充值流水"

                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/paybill"
            android:clickable="true">


            <!-- Title, secondary and supporting text -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/dashboard_test"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/ic__pay_bill_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center"

                android:text="电费账单"

                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/detail"
            android:clickable="true">


            <!-- Title, secondary and supporting text -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/dashboard_test"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/ic_pay_detail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center"

                android:text="用电明细"

                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/pay_fee_brother"
        android:orientation="vertical"
        android:background="@drawable/linertopstroker"
        app:layout_constraintTop_toBottomOf="@id/pay_fee_mohter">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linerstroker"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="预付费余额:"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <TextView
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:textSize="25dp"
                android:text="37.39元"
                android:textColor="@color/red"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linerstroker"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="补助电余额:"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <TextView
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:textSize="25dp"
                android:text="0.00元"
                android:textColor="@color/red"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linerstroker"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="总余额:"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <TextView
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:textSize="25dp"
                android:text="37.39元"
                android:textColor="@color/red"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linerstroker"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="总用电量:"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <TextView
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:textSize="25dp"
                android:text="16415.32kWh"
                android:textColor="@color/red"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linerstroker"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:textSize="25dp"
                android:text="电表状态:"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <TextView
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:gravity="right"
                android:textSize="25dp"
                android:text="(合闸)合闸"
                android:textColor="@color/red"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/pay_fee_brother"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/update_old_password"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                app:helperText="请输入充值的费用,单位元"
                android:hint="费用"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pay_bill_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/pay_bill_comfirm"
                app:icon = "@drawable/ic_done_fill0_wght400_grad0_opsz48"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认支付"
                style="@style/Widget.MaterialComponents.Button.Icon"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>